{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jquery": true,
    "jest": true
  },
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint/eslint-plugin"],
  "extends": ["airbnb/base", "plugin:fsd/all", "plugin:@typescript-eslint/eslint-recommended", "plugin:@typescript-eslint/recommended"],
  "rules": {
    "linebreak-style": 0,
    "indent": [2, 2],
    "no-console": "warn",
    "eot-last": "off",
    "max-len": [2, 200, 4, { "ignoreUrls": true }],
    "no-param-reassign": "off",
    "semi": "off",
    "no-unused-vars": ["error", { "vars": "all", "args": "all", "ignoreRestSiblings": false }],
    "no-new": "off",
    "import/no-unresolved": "off",
    "import/extensions": "off",
    "@typescript-eslint/no-this-alias": "off",
    "comma-dangle": "off",
    "object-curly-newline": "off",
    "no-shadow": "off",
    "class-methods-use-this": "off",
    "implicit-arrow-linebreak": "off",
    "@typescript-eslint/no-var-requires": "off"
  },
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  }
}
